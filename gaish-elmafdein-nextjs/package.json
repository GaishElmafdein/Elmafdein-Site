  "dependencies": {
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.54.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "mammoth": "^1.10.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "openai": "^5.12.2",
    "pdf-parse": "^1.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
  "@tailwindcss/postcss": "^4.1.11",
  "@types/node": "^24.2.1",
  "@types/react": "^19.1.9",
  "@types/react-dom": "^19.1.7",
  "eslint": "^9",
  "eslint-config-next": "15.4.6",
