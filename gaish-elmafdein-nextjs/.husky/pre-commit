#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 1. TypeScript type check (fail fast)
npx tsc --noEmit --incremental false --pretty false || exit 1

# 2. Lint staged files with auto-fix
npx lint-staged || exit 1

# 3. Full project lint (ensures untouched files still clean)
npm run lint || exit 1

# 4. Build (catches runtime / Next compilation issues early)
npm run build --if-present || exit 1
